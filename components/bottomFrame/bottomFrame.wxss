    animation: wrapAnimate 0.3s ease-in-out forwards;
}

@-webkit-keyframes wrapAnimate {
    0% {
    }

    100% {
        background: rgba(0,0,0,0.35);
    }
}

@keyframes wrapAnimate {
    0% {
    }

    100% {
        background: rgba(0,0,0,0.35);
    }
}

.wrapAnimateOut {
    animation: wrapAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes wrapAnimateOut {
    0% {
        background: rgba(0,0,0,0.35);
    }

    100% {
        background: rgba(0,0,0,0);
    }
}

@keyframes wrapAnimateOut {
    0% {
        background: rgba(0,0,0,0.35);
    }

    100% {
        background: rgba(0,0,0,0);
    }
}

.frameAnimate {
    animation: frameAnimate 0.3s ease forwards;
}

@-webkit-keyframes frameAnimate {
    0% {
    }

    100% {
        opacity: 1;
        top: 0vh;
    }
}

@keyframes frameAnimate {
    0% {
    }

    100% {
        opacity: 1;
        top: 0vh;
    }
}

.frameAnimateOut {
    animation: frameAnimateOut 0.2s ease forwards;
}

@-webkit-keyframes frameAnimateOut {
    0% {
        opacity: 1;
        top: 0vh;
    }

    100% {
        opacity: 0;
        top: 100vh;
    }
}

@keyframes frameAnimateOut {
    0% {
        opacity: 1;
        top: 0vh;
    }

    100% {
        opacity: 0;
        top: 100vh;
    }
}

.frame-wrapper {
    position: fixed;
    height: 100vh;
    width: 100vw;
    z-index: 2;
    top: 50vh;
}

.frame {
    background: #fff;
    position: absolute;
    bottom: 0;
    width: 88.2vw;
    padding: 5.33vw 5.87vw 0;
    border-radius: 5.33vw 5.33vw 0 0;
    z-index: 3;
}

.title-wrapper {
    justify-content: space-between;
    font-size: 4.8vw;
    color: #4a4a4a;
}

.flex {
    display: flex;
    align-items: center;
}

.wrap {
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}