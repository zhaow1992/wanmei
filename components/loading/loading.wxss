.loadingComponents {
    min-height: 100vh;
    width: 100vw;
    text-align: center;
    justify-content: space-around;
    align-items: center;
    display: flex;
}

.loadingComponents>view>view {
    margin-top: 5vw;
}

image {
    width: 28.06vw;
    height: 25.14vw;
}

.localLoading {
    width: 100vw;
    height: 50vw;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.popupLoading {
    position: fixed;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: space-around;
    top: 0;
    background: rgba(0,0,0,0.4);
    z-index: 100;
}

.flex {
    display: flex;
    align-items: center;
}