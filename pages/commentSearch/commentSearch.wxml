<navigationcustomtop navigationText="搜索"></navigationcustomtop>
<view class="con">
    <view class="tips  itemBackColor" id="nav">
        <view class="relativeStyle searchWrapper flex">
            <input autoFocus="true" bindconfirm="keywordSearch" bindinput="keywordInput" class=" searchView-viewH flex searchBorder twoFontSize twoFontColor" placeholder="请输入职业名称" placeholderStyle="twoFontSize twoFontColor" type="text" value="{{keyword}}"></input>
            <navigator class="checkedColor twoFontSize" delta="1" openType="navigateBack">取消</navigator>
            <view class="twoFontSize searchView twoFontColor absoluteStyle">
                <image src="/image/search_icon1.png"></image>
            </view>
        </view>
    </view>
    <scroll-view scrollY style="height:{{swiperH}}px;padding:0 30rpx;box-sizing:border-box">
        <loading wx:if="{{showLoad}}"></loading>
        <block wx:else>
            <block wx:if="{{keywordSearchList.length!==0}}">
                <view bindtap="goProfessionDetail" class="kwlist itemBackColor oneFontSize oneFontColor flex flexjsbetween" data-code="{{item.code}}" data-name="{{item.name}}" hoverClass="btnHover" wx:for="{{keywordSearchList}}" wx:key="{{index}}">
                    <view>{{item.name1}}<text style="color:red;">{{keyword}}</text>{{item.name2}}</view>
                    <image src="/image/openList.png"></image>
                </view>
            </block>
            <block wx:else>
                <view class="flex" style="justify-content:space-around;height:50vh;" wx:if="{{searchFalg}}">
                    <view class="flex" style="flex-direction:column;">
                        <image mode="widthFix" src="/image/recommend_noFount.png" style="width:20vw;height:20vw;"></image>
                        <view class="oneFontSize twoFontColor" style="padding:15rpx 0;">没有找到内容</view>
                        <view class="twoFontColor threeFontSize">请换其他条件试试吧</view>
                    </view>
                </view>
                <block wx:else>
                    <view class="flex flexjsbetween" style="padding-top:5.87vw;">
                        <view class="oneFontColor twoFontSize">搜索记录</view>
                        <image bindtap="deleteHistoryStorageTap" class="iconWH" src="/image/laji_icon.png"></image>
                    </view>
                    <view class="flex " style="flex-wrap:wrap;" wx:if="{{searchHistoryList.length>0}}">
                        <view class="blockBackColor" data-name="{{item}}" style="margin:3.2vw 2.67vw 0 0;border-radius:4vw" wx:for="{{searchHistoryList}}" wx:key="unique">
                            <view bindtap="goProfessionDetail" class="twoFontColor threeFontSize flex letterBreak" data-code="{{item.code}}" data-name="{{item.name}}" hoverClass="btnHover" style="padding:1.87vw 3.2vw;">{{item.name}}</view>
                        </view>
                    </view>
                    <view class="flex" style="justify-content:space-around;height:50vh;" wx:else>
                        <view class="flex" style="flex-direction:column;">
                            <image mode="widthFix" src="/image/recommend_noFount.png" style="width:20vw;height:20vw;"></image>
                            <view class="title-font threeFontColor" style="margin-top:5.56vw;">暂无搜索记录</view>
                        </view>
                    </view>
                </block>
            </block>
        </block>
    </scroll-view>
</view>
