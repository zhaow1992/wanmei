.lishiBaoGao {
    box-shadow: none;
    color: #333;
    background: #fff;
    border-top: 1px solid #e4e4e4;
}

.mask {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    bottom: 0;
    left: 0;
    padding: 0 34rpx;
    background-color: rgba(255,255,255,0.15);
    box-sizing: border-box;
}

.myReport {
    display: inline-block;
    position: fixed;
    right: 0;
    top: 163rpx;
    line-height: 60rpx;
    padding: 0 50rpx 0 30rpx;
    z-index: 10;
    border-radius: 100rpx 0 0 100rpx;
    box-sizing: border-box;
}

.num {
    display: inline-block;
    min-width: 28rpx;
    min-height: 28rpx;
    top: 5rpx;
    right: 15rpx;
    line-height: 30rpx;
    background: #E9302D;
    border-radius: 100%;
    padding: 5rpx;
}

.popup-wrapper {
    width: 80vw;
    padding-bottom: 70rpx;
    background: #fff;
    position: fixed;
    top: 60vh;
    opacity: 0;
    left: 10vw;
    border-radius: 12px;
    z-index: 12;
    text-align: center;
}

.popupAnimate {
    animation: popupAnimate 0.5s ease-in-out forwards;
}

@-webkit-keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

@keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

.popupAnimateOut {
    animation: popupAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

@keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

.closepopup {
    position: absolute;
    bottom: -93rpx;
    left: 50%;
    width: 64rpx;
    height: 94rpx;
    transform: translateX(-50%);
}

.student>image,.parent>image {
    width: 152rpx;
    height: 145rpx;
    margin-bottom: 18rpx;
}