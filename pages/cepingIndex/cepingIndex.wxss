    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

.closepopup {
    position: absolute;
    bottom: -93rpx;
    left: 50%;
    width: 64rpx;
    height: 94rpx;
    transform: translateX(-50%);
}

.student>image,.parent>image {
    width: 152rpx;
    height: 145rpx;
    margin-bottom: 18rpx;
}

.titlePopup {
    line-height: 3;
    font-size: 5.8vw;
    margin-top: 2vw;
}

.contentPopup {
    text-align: center;
    padding: 0 4.3vw 8vw 4.3vw;
