page {
    background-color: #f8f5f4;
}

.con {
    overflow: hidden;
    padding: 0 32rpx 30rpx 32rpx;
    margin-top: 20rpx;
}

.myReport {
    display: inline-block;
    position: fixed;
    right: 0;
    top: 12%;
    line-height: 60rpx;
    padding: 0 50rpx 0 30rpx;
    z-index: 10;
    border-radius: 100rpx 0 0 100rpx;
    box-sizing: border-box;
}

.num {
    display: inline-block;
    min-width: 28rpx;
    min-height: 28rpx;
    top: 5rpx;
    right: 15rpx;
    line-height: 30rpx;
    background: #E9302D;
    border-radius: 100%;
    padding: 5rpx;
}

.majorTest {
    overflow: hidden;
    height: 280rpx;
    box-sizing: border-box;
}

.majorTestImg {
    width: 104%;
    height: 106%;
    margin-left: -2%;
    margin-top: -1%;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.05);
}

.majorTest .title {
    margin: 36rpx 0 8rpx 0;
}

.startTest {
    bottom: 36rpx;
    left: 40rpx;
    width: 220rpx;
    height: 68rpx;
    margin-top: 42rpx;
    line-height: 68rpx;
    display: inline-block;
    border-radius: 17px;
    color: #FF738D;
}

.majorTest .tips {
    bottom: 50rpx;
    right: 0;
    padding: 4rpx 10rpx;
    opacity: 0.8;
    background: #FF4E6F;
    border-radius: 100px 0 0 100px;
}

.videoScrollBox {
    overflow-x: scroll;
    margin-top: 30rpx;
}

.videoScrollBox .v-list {
    overflow: hidden;
    width: 300rpx;
    flex-shrink: 0;
    margin-right: 20rpx;
    border-radius: 8px;
}

.videoScrollBox .showmore {
    flex-shrink: 0;
    width: 110rpx;
    height: 226rpx;
    line-height: 226rpx;
    border-radius: 8px;
}

.videoScrollBox .v-l-top {
    height: 226rpx;
}

.videoScrollBox .v-l-top .tool {
    width: 100%;
    padding: 8rpx 15rpx;
    bottom: 0rpx;
    left: 0;
    box-sizing: border-box;
    background-image: linear-gradient(180deg,rgba(0,0,0,0.00) 0%,rgba(0,0,0,0.35) 77%);
}

.videoScrollBox .v-l-top .v-img {
    width: 100%;
    height: 226rpx;
}

.videoScrollBox .v-l-top .seen {
    width: 28rpx;
    height: 20rpx;
    margin-right: 8rpx;
}

.public {
    margin-top: 50rpx;
}

.public .test-type {
    flex-wrap: wrap;
    justify-content: space-between;
}

.test-list {
    flex-shrink: 0;
    width: 48.5%;
    padding-left: 20rpx;
    height: 234rpx;
    margin-top: 20rpx;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.03);
    border-radius: 8px;
    box-sizing: border-box;
}

.test-list .t-title {
    margin: 30rpx 0 10rpx 0;
}

.public .img {
    width: 160rpx;
    height: 230rpx;
    bottom: 0rpx;
    right: 0rpx;
}

.public .img.active {
    width: 210rpx;
    height: 174rpx;
}

.public .desc {
    bottom: 30rpx;
    left: 20rpx;
}

