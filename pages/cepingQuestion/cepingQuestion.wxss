page {
    background: #f8f5f4;
    padding-top: 16rpx;
    box-sizing: border-box;
}

.tiao-bg {
    background: #f0eff5;
    width: 250px;
    height: 2vw;
    border-radius: 10px;
    position: absolute;
}

.tiao-wrap {
    background: #e9302d;
    border-radius: 10px;
    position: absolute;
    height: 2vw;
    width: 50px;
}

.question {
    padding: 10vw 4.8vw;
    border-bottom: 10rpx solid #f0eff5;
    height: 9vw;
}

.newClassTitle {
    line-height: 3;
    font-size: 32rpx;
    color: #212121;
}

.answers {
    color: #e9302d;
    border: 1px solid #e9302d;
    border-radius: 50px;
    width: 75vw;
    margin: 4.8vw auto;
    text-align: center;
    line-height: 2.5;
    background: #fff;
}

.progress {
    height: 2.5vw;
}

.progress-wrapper {
    overflow: hidden;
    border-bottom: 1px solid #eee;
    margin-top: -1rpx;
}

.active-wrapper {
    background: #d8d8d8;
    opacity: 0.6;
    transition: 0.2s;
}

.answersBtn {
    text-align: left;
    height: 12vw;
    line-height: 12vw;
    background: #fff;
    font-size: 32rpx;
    color: #212121;
}

.content-wrapper {
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 25rpx 38rpx;
    background-color: #f8f5f4;
    box-sizing: border-box;
}

.shareBox {
    height: 582rpx;
    border-radius: 16rpx;
    margin: 16rpx 32rpx;
}

.share {
    width: 360rpx;
    height: 360rpx;
    margin: 56rpx 0;
    margin-left: 50%;
    transform: translateX(-50%);
}

.shareBtn {
    line-height: 88rpx;
    text-align: center;
    background-image: linear-gradient(-52deg,#E9302D 1%,#FF5053 100%);
    box-shadow: 0 2px 3px 2px rgba(250,149,150,0.30);
    border-radius: 46rpx;
    color: #fff;
    margin: 55rpx 32rpx 0;
}

.mask {
    left: 0;
    top: 0;
    bottom: 0;
    box-sizing: border-box;
}

.active {
    margin-bottom: 0;
    width: 0;
    height: 12vw;
    color: #fff;
    background-color: #e9302d;
    animation: bgAnimation 0.2s ease forwards;
    z-index: 999;
    overflow: hidden;
}

@-webkit-keyframes bgAnimation {
    0% {
        width: 0;
    }

    100% {
        width: 100%;
    }
}

@keyframes bgAnimation {
    0% {
        width: 0;
    }

    100% {
        width: 100%;
    }
}

.decorate {
    top: 0;
    left: 0;
    width: 12rpx;
    height: 12vw;
    background-color: #e9e9e9;
    box-sizing: border-box;
}

.opacityIn {
    animation: opacityIn 0.5s forwards;
}

@-webkit-keyframes opacityIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes opacityIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.opacityOut {
    animation: opacityOut 0.5s forwards;
}

@-webkit-keyframes opacityOut {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

@keyframes opacityOut {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}