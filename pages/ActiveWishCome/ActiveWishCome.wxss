page {
    width: 100vw;
    height: 100vh;
    background: #000;
    overflow: hidden;
}

.zan {
    width: 50vw;
    height: 100%;
    color: #fff;
    text-align: center;
    line-height: 13.2vw;
    border-radius: 5px;
}

.scrollview-wrapper {
    margin-left: 4.17vw;
    display: inline-block;
    background: red;
    width: 18.61vw;
    height: 18.61vw;
    border-radius: 5px;
    position: relative;
    overflow: hidden;
    box-sizing: border-box;
}

.scrollview-container {
    white-space: nowrap;
    position: absolute;
    bottom: 11.5vh;
}

.scrollview-info {
    position: absolute;
    bottom: 0;
    left: 0;
    color: #fff;
    text-align: center;
    width: 100%;
    height: 3.2vw;
    line-height: 3.2vw;
    background: #ff5053;
}

.scrollview-container image {
    width: 18.61vw;
    height: 18.61vw;
}

.wishPic {
    text-align: center;
}

.wishPic image {
    width: 87.5vw;
    height: 117.2vw;
}

.wishBottomBtn-container {
    height: 13.2vw;
    position: fixed;
    bottom: 0;
    justify-content: space-around;
    width: 94.44vw;
    padding: 0 2.78vw 2.78vw;
}

.shareBtn-wrapper {
    width: 39vw;
    background: #ff5053;
    justify-content: center;
}

.shareBtn-wrapper image {
    width: 8vw;
    height: 6vw;
    margin-right: 2vw;
}

.makeBtn-wrapper {
    width: 51.4vw;
    background: #e9302d;
    justify-content: center;
}

.makeBtn-wrapper image {
    width: 5.14vw;
    height: 4.44vw;
    margin-right: 1vw;
}