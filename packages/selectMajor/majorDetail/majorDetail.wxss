.info-wrapper {
    padding: 0 2.7vw;
    justify-content: space-between;
    flex-wrap: wrap;
}

.item-wrapper {
    width: 30vw;
    margin-top: 3vw;
    height: 12vw;
    white-space: nowrap;
}

.icon-wrapper {
    width: 6.4vw;
    height: 6.4vw;
    border-radius: 100%;
    justify-content: space-around;
}

.icon-wrapper>image {
    width: 4vw;
    height: 4vw;
}

.text-wrapper {
    margin-left: 2.7vw;
    line-height: 1.5;
    flex-direction: column;
    justify-content: space-between;
    height: 90%;
    align-items: flex-start;
    width: 20vw;
}

.more {
    line-height: 3.5;
    justify-content: space-around;
}

.majorContent-wrapper {
    margin-top: 2.13vw;
}

.majorInfo-wrappper {
    justify-content: space-between;
    width: 86.1vw;
    margin: 0 auto;
    padding: 2.7vw;
    background: #FAFAFA;
    border-radius: 8px;
    margin-bottom: 2.67vw;
}

.openJobAnimate {
    transform: rotate(90deg);
}

.jobInfo-wrapper {
    height: 0;
    overflow: hidden;
}

.progress-wrapper {
    width: 89.1vw;
    margin-left: 3.6vw;
    line-height: 1;
}

.progress-wrapper>view:first-of-type {
    width: 72vw;
    height: 2.13vw;
    border-radius: 2.13vw;
    background: #F2F2F2;
    margin-right: 4vw;
    position: relative;
}

.progress-wrapper>view:first-of-type>view {
    height: 2.13vw;
    border-radius: 2.13vw;
    background: linear-gradient(270deg,#FF7573 0%,#FFBE9B 100%);
    position: absolute;
    top: 0;
    left: 0;
}

.tab-wrapper {
    height: 12.8vw;
    line-height: 1;
    border-bottom: 1px solid #E9E9E9;
    margin-bottom: 4vw;
}

.bottomInfo-wrapper {
    width: 91.5vw;
    padding: 4vw 0 0;
    border-radius: 8px;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.03);
    margin: 4vw auto;
    background: #FAFAFA;
}

.dian {
    width: 1.6vw;
    height: 1.6vw;
    border-radius: 100%;
    background: #E9302D;
    margin-right: 4vw;
}

.infoText-wrapper {
    padding: 4vw 0 6.67vw 4vw;
    line-height: 1;
}

.infoText-wrapper>view {
    margin-top: 2.67vw;
}

.collegeLogo {
    width: 9.07vw;
    height: 9.07vw;
    margin-right: 3.2vw;
}

.sign {
    vertical-align: middle;
    border: 1px solid #9b9b9b;
    padding: 0 1.6vw;
    color: #9b9b9b;
    font-weight: normal;
}

.popup-wrapper {
    width: 70vw;
    background: #fff;
    position: fixed;
    top: 60vh;
    opacity: 0;
    left: 10vw;
    border-radius: 12px;
    z-index: 12;
    padding: 5vw;
    line-height: 1.8;
}

.popupAnimate {
    animation: popupAnimate 0.5s ease-in-out forwards;
}

@-webkit-keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

@keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

.popupAnimateOut {
    animation: popupAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

@keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

.closeLine {
    position: absolute;
    width: 2px;
    height: 5vw;
    background: #fff;
    left: 50%;
    margin-left: -1px;
    bottom: -5vw;
}

.closeBtn {
    position: absolute;
    width: 8.5vw;
    height: 8.5vw;
    color: #fff;
    text-align: center;
    line-height: 8.5vw;
    left: 50%;
    margin-left: -4.25vw;
    bottom: -13vw;
    font-size: 5vw;
}

.all-no-data {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 220rpx;
    height: 130rpx;
    z-index: 99;
    text-align: center;
    font-size: 28rpx;
    color: #9B9B9B;
}

.all-no-data>image {
    width: 220rpx;
    height: 196rpx;
}