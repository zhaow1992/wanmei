.evaluation-wrapper {
    width: 91.5vw;
    padding: 4vw 0 0;
    border-radius: 8px;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.03);
    margin: 4vw auto;
    overflow: hidden;
}

.dian {
    width: 1.6vw;
    height: 1.6vw;
    border-radius: 100%;
    background: #E9302D;
    margin-right: 4vw;
}

.text-wrapper {
    padding: 4vw 0 6.67vw 4vw;
    line-height: 1;
}

.text-wrapper>view {
    margin-top: 2.67vw;
}

.collegeLogo {
    width: 9.07vw;
    height: 9.07vw;
    margin-right: 3.2vw;
}

.evaluationBtn {
    background: #FAFAFA;
    line-height: 3.5;
}

.no-data {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 220rpx;
    height: 130rpx;
    z-index: 99;
    text-align: center;
    font-size: 28rpx;
    color: #9B9B9B;
}

.no-data>image {
    width: 220rpx;
    height: 196rpx;
}

.tabDownWH {
    height: 1.04vw;
    width: 1.6vw;
}

.graySeparate {
    background: #f8f5f4;
}

.dropDown-wrapper {
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.05);
    border-radius: 4px;
    min-width: 29.9vw;
    text-align: center;
    font-size: 3.73vw;
    color: #4a4a4a;
    padding: 0 1.1vw;
    background: #fff;
    height: 100%;
    overflow: hidden;
    opacity: 0;
}

.popup-wrapper1 {
    width: 80vw;
    background: #fff;
    position: fixed;
    top: 60vh;
    opacity: 0;
    left: 10vw;
    border-radius: 12px;
    z-index: 12;
    text-align: center;
}

.dropDown-wrapper>view {
    line-height: 3;
    border-bottom: 1px solid #e9e9e9;
}

.dropDownAnimate {
    animation: dropDownAnimate 0.2s ease forwards;
}

@-webkit-keyframes dropDownAnimate {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes dropDownAnimate {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.dropDownAnimateOut {
    animation: dropDownAnimateOut 0.5s ease forwards;
}

@-webkit-keyframes dropDownAnimateOut {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

@keyframes dropDownAnimateOut {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

.popupAnimate {
    animation: popupAnimate 0.5s ease-in-out forwards;
}

@-webkit-keyframes popupAnimate {
    0% {
    }

    60% {
        top: 20vh;
        opacity: 0.5;
    }

    80% {
        top: 22vh;
        opacity: 1;
    }

    100% {
        top: 20vh;
        opacity: 1;
    }
}

@keyframes popupAnimate {
    0% {
    }

    60% {
        top: 20vh;
        opacity: 0.5;
    }

    80% {
        top: 22vh;
        opacity: 1;
    }

    100% {
        top: 20vh;
        opacity: 1;
    }
}

.popupAnimateOut {
    animation: popupAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes popupAnimateOut {
    0% {
        top: 20vh;
    }

    100% {
        top: 100vh;
    }
}

@keyframes popupAnimateOut {
    0% {
        top: 20vh;
    }

    100% {
        top: 100vh;
    }
}