.evaluation-wrapper {
    width: 91.5vw;
    padding: 4vw 0 0;
    border-radius: 8px;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.03);
    margin: 4vw auto;
    overflow: hidden;
}

.dian {
    width: 1.6vw;
    height: 1.6vw;
    border-radius: 100%;
    background: #E9302D;
    margin-right: 4vw;
}

.text-wrapper {
    padding: 4vw 0 6.67vw 4vw;
    line-height: 1;
}

.text-wrapper>view {
    margin-top: 2.67vw;
}

.collegeLogo {
    width: 9.07vw;
    height: 9.07vw;
    margin-right: 3.2vw;
}

.evaluationBtn {
    background: #FAFAFA;
    line-height: 3.5;
}

.no-data {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 220rpx;
    height: 130rpx;
    z-index: 99;
    text-align: center;
    font-size: 28rpx;
    color: #9B9B9B;
}

.no-data>image {
    width: 220rpx;
    height: 196rpx;
}