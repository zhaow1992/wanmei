.evaluation-wrapper {
    width: 91.5vw;
    padding: 4vw 0 0;
    border-radius: 8px;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.03);
    margin: 4vw auto;
    overflow: hidden;
}

.dian {
    width: 1.6vw;
    height: 1.6vw;
    border-radius: 100%;
    background: #E9302D;
    margin-right: 4vw;
}

.text-wrapper {
    padding: 4vw 0 6.67vw 4vw;
    line-height: 1;
}

.text-wrapper>view {
    margin-top: 2.67vw;
}

.collegeLogo {
    width: 9.07vw;
    height: 9.07vw;
    margin-right: 3.2vw;
}

.evaluationBtn {
    background: #FAFAFA;
    line-height: 3.5;
}

.h-tips {
    margin: 15rpx 0;
    line-height: 52rpx;
}

.workContent {
    padding: 20rpx 30rpx;
    background: #FAFAFA;
    border-radius: 16rpx;
}

.t-left,.s-left {
    width: 50rpx;
    height: 50rpx;
    margin-right: 15rpx;
    border-radius: 50%;
}

.t-left {
    margin-left: -20rpx;
    background-image: linear-gradient(180deg,#7FDF15 10%,#7ED321 100%);
}

.s-left {
    background-image: linear-gradient(159deg,#9988FF 3%,#7D47FE 90%);
}

.t-left>image,.s-left>image {
    width: 35rpx;
    height: 35rpx;
    margin: 8rpx 0 0 8rpx;
}

.public-con {
    padding: 30rpx;
    margin-top: 16rpx;
    background-color: #fff;
}

.list-wrap {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.list-wrap.autoHeight {
    display: block;
}

.public-con .title {
}

.job-list {
    position: relative;
    padding: 0 40rpx;
    line-height: 100rpx;
}

.job-list::after {
    position: absolute;
    bottom: 0;
    content: '';
    height: 2rpx;
    width: 88%;
    border-top: 1rpx solid #e9e9e9;
}

.job-list:last-child::after {
    content: '';
    height: 0rpx;
    width: 0;
}

.job-list image {
    width: 14rpx;
    height: 26rpx;
    margin-left: 18rpx;
}

.profession-info {
    white-space: nowrap;
    padding: 20rpx 0rpx;
    background: #F8F5F4;
}

.profession-info>view {
    margin-right: 20rpx;
    padding: 10rpx 20rpx;
    border-radius: 16rpx;
    line-height: 40rpx;
}

.changeTab {
    overflow: hidden;
    margin-right: 30rpx;
    border: 1rpx solid #CCC;
    border-radius: 28rpx;
}

.changeTab>view {
    padding: 2rpx 20rpx;
    background-color: #fff;
}

.changeTab>view.active {
    background-color: #E9302D;
    color: #fff;
}

.changeTab>view.alone {
    width: 180rpx;
    color: #fff;
    background: #E9302D;
    text-align: center;
}

.profession-info>view.active {
    color: #fff;
    background: #E9302D;
}

.salary-info {
    margin-bottom: 15rpx;
    padding: 30rpx 0;
    background-color: #fff;
}

.salary-info .title {
    padding: 0 30rpx;
}

.salary-info>image {
    display: block;
    width: 90%;
    height: 400rpx;
    margin-left: 5%;
}

.salaryAddImg {
    width: 92%;
    height: 400rpx;
    margin-left: 4%;
}

.nav {
    height: 108rpx;
    padding: 0 20rpx;
    border-bottom: 2rpx solid #E9E9E9;
}

.salaryRank {
    overflow: hidden;
    position: relative;
    padding: 0 20rpx;
    line-height: 70rpx;
}

.salaryRank:last-child {
    padding-bottom: 20rpx;
}

.demand .salaryRank:last-child {
    padding-bottom: 20rpx;
}

.professionName {
    position: absolute;
    left: 20rpx;
    top: 10rpx;
    padding: 0 15rpx;
}

.money {
    position: absolute;
    right: 20rpx;
    top: 10rpx;
    padding: 0 15rpx;
}

.loadMore {
    position: relative;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fafafa;
}

.loadMore>image {
    transform: rotate(90deg);
    width: 10rpx;
    height: 18rpx;
    margin-left: 10rpx;
}

.loadMore>image.up {
    transform: rotate(-90deg);
}

.line {
    color: #ccc;
    letter-spacing: 8rpx;
    box-sizing: border-box;
}

.data-source {
    width: 86%;
    margin: 15rpx auto 20rpx;
    padding: 30rpx;
    background: #fff;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.03);
    border-radius: 8px;
}

.data-source .title {
    margin-left: 10rpx;
}

.data-source .title>image {
    width: 36rpx;
    height: 40rpx;
    margin-right: 15rpx;
    margin-top: -5rpx;
    vertical-align: middle;
}

.data-source .d-con {
    margin-top: 10rpx;
}

.data-source .d-con>view {
    position: relative;
    padding-left: 50rpx;
    line-height: 40rpx;
}

.data-source .d-con>view>text {
    position: absolute;
    left: 10rpx;
    top: 18rpx;
    width: 12rpx;
    height: 12rpx;
    background: #E9302D;
    border-radius: 50%;
}

.number {
    height: 40px;
    padding: 0 30rpx;
    line-height: 40px;
}

.majorList {
    padding: 20rpx 30rpx;
    margin-bottom: 10rpx;
}

.majorList .openList {
    width: 14rpx;
    height: 24rpx;
    margin-left: 18rpx;
}

.showMore {
    justify-content: center;
    margin-left: -20rpx;
    margin-top: 10rpx;
}

.showMore>image {
    margin-top: 5rpx;
    transform: rotate(90deg);
}

.no-data {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 220rpx;
    height: 130rpx;
    z-index: 99;
    text-align: center;
}

.no-data>image {
    width: 220rpx;
    height: 196rpx;
}

.salary-info .no-data {
    position: relative;
    margin-top: 100rpx;
    padding-bottom: 50rpx;
}

.salary-info .no-data>image {
    width: 180rpx;
    height: 165rpx;
}