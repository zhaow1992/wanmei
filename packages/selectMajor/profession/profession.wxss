.con {
    background-color: #f8f5f4;
    position: relative;
}

.searchView-viewH {
    width: 100%;
    height: 68rpx;
    line-height: 68rpx;
    text-align: left;
    padding-left: 80rpx;
    box-sizing: border-box;
}

.searchView {
    left: 20rpx;
    top: 40rpx;
}

.searchView>image {
    width: 30rpx;
    height: 32rpx;
}

.kwlist {
    padding: 0 30rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #e9e9e9;
}

.kwlist>image {
    width: 15rpx;
    height: 26rpx;
}

.searchWrapper {
    justify-content: space-around;
    padding: 20rpx 2.13vw;
}

.searchBorder {
    background: #eee;
    border: none;
    width: 96%;
}

.tips {
    text-align: right;
    font-size: 24rpx;
    color: #757575;
}

.tips>image {
    width: 18rpx;
    height: 18rpx;
    margin-right: 8rpx;
}

.popup {
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.35);
    width: 100vw;
    height: 100vh;
    z-index: 999;
}

.popup .title {
    font-size: 30rpx;
    color: #2A2A2A;
}

.t-list {
    margin-top: 15rpx;
}

.popup-con {
    position: absolute;
    top: 40%;
    left: 50%;
    width: 75%;
    padding: 30rpx;
    color: #4A4A4A;
    line-height: 44rpx;
    font-size: 26rpx;
    background-color: #fff;
    transform: translate(-50%,-50%);
    border-radius: 20rpx;
    z-index: 99;
}

.closeToast>.line {
    position: absolute;
    bottom: -44rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 4rpx;
    height: 42rpx;
    background-color: #fff;
}

.closeToast>image {
    position: absolute;
    bottom: -106rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 64rpx;
    height: 64rpx;
}

.jobtypename {
    position: relative;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    line-height: 50px;
    height: 50px;
    border-bottom: 1rpx solid #E9E9E9;
    box-sizing: border-box;
}

.profession-type {
    transition: height .2s ease-in;
    border-bottom: 1rpx solid #e9e9e9;
    box-sizing: border-box;
}

.profession-type.noborder {
    border: none;
}

.profession-type+.profession-type {
}

.profession-item {
    overflow: hidden;
    transition: all .2s;
    line-height: 50px;
    box-sizing: border-box;
    border-bottom: 1rpx solid #E9E9E9;
}

.profession-item:last-child .clear,.profession-item:last-child .profession-box:last-child .profession-list:last-child {
    border: none;
}

.p-type {
    display: inline-block;
    padding: 0 70rpx;
    font-size: 32rpx;
    color: #212121;
    width: 100%;
}

.p-type+.p-type {
    border-top: 1rpx solid #E9E9E9;
}

.openList {
    width: 14rpx;
    height: 24rpx;
    margin-right: 15rpx;
}

.p-type>image {
    width: 14rpx;
    height: 24rpx;
}

.openJobAnimate {
    transform: rotate(90deg);
}

.profession-number {
    float: right;
    margin-right: 30rpx;
    color: #757575;
    font-size: 28rpx;
}

.p-price {
    margin-right: 30rpx;
}

.p-price>image {
    width: 14rpx;
    height: 24rpx;
    margin-left: 15rpx;
}

.profession-box {
    transition: height .2s ease-in;
    overflow: hidden;
    border-top: 1rpx solid #E9E9E9;
    font-size: 28rpx;
    color: #757575;
}

.profession-box.active {
    border-top: 1rpx solid #E9E9E9;
}

.profession-list {
    height: 50px;
    line-height: 50px;
}

.profession-list:last-child .flex:first-child {
    border: none;
}

.profession-list>.flexjsbetween {
    line-height: 50px;
    margin-left: 94rpx;
    text-indent: 1rpx;
    border-bottom: 1rpx solid #E9E9E9;
}

.popup-wrapper {
    width: 70vw;
    background: #fff;
    position: fixed;
    top: 60vh;
    opacity: 0;
    left: 10vw;
    border-radius: 12px;
    z-index: 12;
    padding: 5vw;
    line-height: 1.8;
}

.popupAnimate {
    animation: popupAnimate 0.5s ease-in-out forwards;
}

@-webkit-keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

@keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

.popupAnimateOut {
    animation: popupAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

@keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

.no-data {
    position: absolute;
    top: 35%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 220rpx;
    height: 130rpx;
    z-index: 99;
    text-align: center;
}

.no-data>image {
    width: 220rpx;
    height: 196rpx;
}