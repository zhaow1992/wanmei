.dropDown-wrapper {
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.05);
    border-radius: 4px;
    min-width: 29.9vw;
    text-align: center;
    font-size: 3.73vw;
    color: #4a4a4a;
    padding: 0 1.1vw;
    background: #fff;
    height: 100%;
    overflow: hidden;
    opacity: 0;
}

.dropDown-wrapper>view {
    line-height: 3;
    border-bottom: 1px solid #e9e9e9;
}

.dropDownAnimate {
    animation: dropDownAnimate 0.2s ease forwards;
}

@-webkit-keyframes dropDownAnimate {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes dropDownAnimate {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.dropDownAnimateOut {
    animation: dropDownAnimateOut 0.5s ease forwards;
}

@-webkit-keyframes dropDownAnimateOut {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

@keyframes dropDownAnimateOut {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

.triangle {
    border-left: 2.1vw solid transparent;
    border-right: 2.1vw solid transparent;
    border-bottom: 2.1vw solid #fff;
    position: absolute;
    top: 0.4vw;
    left: 3.5vw;
    opacity: 0;
}

.triangle:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    border-left: 2.1vw solid transparent;
    border-right: 2.1vw solid transparent;
    border-bottom: 2.1vw solid rgba(0,0,0,0.05);
    margin-left: -1.9vw;
    z-index: -1;
    filter: blur(4px);
}

