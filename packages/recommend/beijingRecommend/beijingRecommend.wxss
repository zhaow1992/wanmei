    background-color: #F7BA00;
}

.cwbtype .bao>text::before {
    content: '';
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    margin-right: 10rpx;
    border-radius: 50%;
    background-color: #76CF27;
}

.majorNum {
    color: #212121;
}