.statusBar {
    display: fixed;
    width: 100vw;
    z-index: 2;
    position: fixed;
    background: #fff;
    top: 0;
}

.bar {
    width: 100vw;
    position: fixed;
    left: .0;
    z-index: 1;
    background: #fff;
}

.navigateBack {
    padding: 4vw 10vw 4vw 4vw;
    position: absolute;
}

.navigateBack>image {
    width: 3.2vw;
}

.barText {
    position: absolute;
    width: 64vw;
    text-align: center;
    left: 14vw;
    font-size: 4.6vw;
    color: #212121;
}

.pay-wrapper {
    box-shadow: 0 4px 4px 4px rgba(0,0,0,0.05);
    height: 16.8vw;
    justify-content: space-between;
    padding: 0 4.3vw;
    position: fixed;
    bottom: 0;
    width: 91.4vw;
    background: #fff;
}

.money {
    font-size: 6.4vw;
    color: #F54142;
}

.payBtn {
    width: 47.7vw;
    height: 11.73vw;
    text-align: center;
    line-height: 11.73vw;
    color: #fff;
    border-radius: 11.73vw;
    background: linear-gradient(to left,#E9302D,#FF5053);
}

.wrapAnimate {
    animation: wrapAnimate 0.5s ease-in-out forwards;
}

@-webkit-keyframes wrapAnimate {
    0% {
    }

    100% {
        background: rgba(0,0,0,0.4);
    }
}

@keyframes wrapAnimate {
    0% {
    }

    100% {
        background: rgba(0,0,0,0.4);
    }
}

.wrapAnimateOut {
    animation: wrapAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes wrapAnimateOut {
    0% {
        background: rgba(0,0,0,0.4);
    }

    100% {
        background: rgba(0,0,0,0);
    }
}

@keyframes wrapAnimateOut {
    0% {
        background: rgba(0,0,0,0.4);
    }

    100% {
        background: rgba(0,0,0,0);
    }
}

.popupAnimate {
    animation: popupAnimate 0.5s ease-in-out forwards;
}

@-webkit-keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

@keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

.popupAnimateOut {
    animation: popupAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

@keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

.wrap {
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5);
    justify-content: space-between;
}

.popup-wrapper {
    width: 80vw;
    background: #fff;
    position: fixed;
    top: 60vh;
    opacity: 0;
    left: 10vw;
    border-radius: 12px;
    z-index: 4;
    text-align: center;
}

button {
    border: none;
    border-radius: 0;
}

.slide-image {
    width: 91.5vw;
    position: relative;
    text-align: center;
    margin: auto;
}

.slide-image>view:first-of-type {
    justify-content: space-between;
    position: absolute;
    top: 5vw;
    left: 4vw;
    width: 66vw;
    color: #fff;
    line-height: 1;
}

.slide-image>view:last-of-type {
    justify-content: space-between;
    position: absolute;
    bottom: 6vw;
    left: 4vw;
    width: 92%;
}