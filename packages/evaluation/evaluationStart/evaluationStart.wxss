page {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    background-color: #f8f5f4;
}

.wrapper {
    padding: 4vw 4vw 10vw 4vw;
    font-size: 3.9vw;
    color: #000;
    transition: height 0.5s;
}

.title-wrapper {
    font-size: 4.6vw;
    line-height: 1.5;
    align-items: stretch;
    padding: 2vw 0;
    min-height: 20vw;
}

.answer-wrapper {
    padding: 4vw;
    text-align: left;
    font-size: 3.9vw;
    line-height: 1;
    background-color: #fff;
    margin-top: 4vw;
    justify-content: space-between;
    box-sizing: border-box;
}

#answersList .answer-wrapper:first-child {
    margin-top: 0;
}

.bottom-wrapper {
    flex-direction: column;
    justify-content: space-around;
    height: 10vw;
    padding-bottom: 4vw;
    align-items: stretch;
}

.progress {
    height: 2.5vw;
}

.progress-wrapper {
    overflow: hidden;
    border-bottom: 1px solid #eee;
    margin-top: -1rpx;
}

.active-wrapper {
    background: #d8d8d8;
    opacity: 0.6;
    transition: 0.2s;
}

.upper-wrapper {
    justify-content: space-between;
}

.upper-wrapper>view:first-of-type image {
    width: 2vw;
    margin-right: 2vw;
}

.upper-wrapper>view:last-of-type>text {
    color: #212121;
    font-size: 44rpx;
}

.on {
    padding: 4vw;
    width: 0;
    color: #fff;
    background-color: #e9302d;
    animation: bgAnimation 0.2s ease forwards;
}

@-webkit-keyframes bgAnimation {
    0% {
        width: 0;
    }

    100% {
        width: 100%;
    }
}

@keyframes bgAnimation {
    0% {
        width: 0;
    }

    100% {
        width: 100%;
    }
}

.decorate {
    top: 0;
    left: 0;
    width: 12rpx;
    padding: 6vw 0;
    background-color: #e9e9e9;
    box-sizing: border-box;
}

.mask {
    left: 0;
    top: 0;
    bottom: 0;
    box-sizing: border-box;
}

.onUpper {
    color: #e9302d;
}

.changeAnimateShow {
    animation: changeAnimateShow 0.1s ease forwards;
}

@-webkit-keyframes changeAnimateShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes changeAnimateShow {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.changeAnimateHide {
    animation: changeAnimateHide 0.5s ease forwards;
}

@-webkit-keyframes changeAnimateHide {
    0% {
        opacity: 1;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

@keyframes changeAnimateHide {
    0% {
        opacity: 1;
    }

    50% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

.titlePopup {
    line-height: 3;
    font-size: 5.8vw;
    margin-top: 2vw;
}

.contentPopup {
    text-align: center;
    padding: 0 4.3vw 8vw 4.3vw;
    line-height: 2;
    font-size: 3.9vw;
    color: #999999;
    border-bottom: 1px solid #eee;
}

.chooseSex-wrapper>view {
    width: 40vw;
    color: #000;
    text-align: center;
    font-size: 4.6vw;
    line-height: 3;
}

.chooseSex-wrapper>view:first-of-type {
    border-right: 1px solid #eee;
    color: #000;
}

.popupAnimate {
    animation: popupAnimate 0.5s ease-in-out forwards;
}

@-webkit-keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

@keyframes popupAnimate {
    0% {
    }

    60% {
        top: 30vh;
        opacity: 0.5;
    }

    80% {
        top: 32vh;
        opacity: 1;
    }

    100% {
        top: 30vh;
        opacity: 1;
    }
}

.popupAnimateOut {
    animation: popupAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

@keyframes popupAnimateOut {
    0% {
        top: 30vh;
    }

    100% {
        top: 100vh;
    }
}

.popup-wrapper {
    width: 80vw;
    background: #fff;
    position: fixed;
    top: 60vh;
    opacity: 0;
    left: 10vw;
    border-radius: 12px;
    z-index: 12;
    text-align: center;
}

.shareBox {
    height: 582rpx;
    border-radius: 16rpx;
    margin: 16rpx 32rpx;
    margin-top: 108rpx;
}

.share {
    width: 360rpx;
    height: 360rpx;
    margin: 56rpx 0;
    margin-left: 50%;
    transform: translateX(-50%);
}

.shareBtn {
    background-image: linear-gradient(-52deg,#E9302D 1%,#FF5053 100%);
    box-shadow: 0 2px 3px 2px rgba(250,149,150,0.30);
    border-radius: 46rpx;
    color: #fff;
    margin: 55rpx 32rpx 0;
}

.answersList {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
}

.opacityIn {
    animation: opacityIn 0.5s ease-in-out forwards;
}

@-webkit-keyframes opacityIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes opacityIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

.opacityOut {
    animation: opacityOut 0.5s ease-in-out forwards;
}

@-webkit-keyframes opacityOut {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

@keyframes opacityOut {
    0% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

.list {
    overflow: hidden;
    position: absolute;
    width: 100%;
    height: 100%;
    transition: all 0.4s ease-in;
}

.answerList {
    overflow: hidden;
}