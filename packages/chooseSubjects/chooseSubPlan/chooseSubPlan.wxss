page {
    background: #f8f5f4;
}

.description {
    top: 50%;
    left: 50%;
    width: 100%;
    transform: translate(-50%,-50%);
    line-height: 1.5;
}

.item-wrapper {
    background: #fff;
    border-radius: 8px;
    line-height: 1.5;
    margin-bottom: 20rpx;
}

.item {
    padding: 32rpx;
    justify-content: space-between;
    border-radius: 8px;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.03);
}

.recommend-btn {
    position: fixed;
    bottom: 5vw;
    left: 50%;
    margin-left: -39.35vw;
}

.number {
    line-height: 1.2;
}

.subTab {
    padding: 32rpx 32rpx 0;
    width: 82.8vw;
    margin: auto;
    box-shadow: 0 0 5px 2px rgba(0,0,0,0.03);
    border-radius: 8px;
    background: #fff;
}

.subItem {
    width: 124rpx;
    height: 52rpx;
    border: 1px solid #d0d0d0;
    border-radius: 52rpx;
    justify-content: space-around;
    box-sizing: border-box;
}

.moreIcon {
    width: 18rpx;
    height: 10rpx;
    margin-left: 10rpx;
}

.chooseItem {
    width: 24rpx;
    height: 8rpx;
    border-radius: 8rpx;
    background: #ccc;
}

.checked {
    background: #E9302D;
}

.itemLogo {
    width: 56rpx;
    height: 56rpx;
}

.titlePopup {
    line-height: 3;
    font-size: 5.8vw;
    margin-top: 2vw;
}

.contentPopup {
    text-align: center;
    padding: 0 4.3vw 8vw 4.3vw;
    line-height: 2;
    font-size: 3.9vw;
    color: #999999;
    border-bottom: 1px solid #eee;
}

.chooseSex-wrapper>view {
    width: 40vw;
    color: #3388FF;
    text-align: center;
    font-size: 4.6vw;
    line-height: 3;
}

.chooseSex-wrapper>view:first-of-type {
    border-right: 1px solid #eee;
}

.popup-wrapper {
    width: 80vw;
    background: #fff;
    position: fixed;
    top: 60vh;
    opacity: 0;
    left: 10vw;
    border-radius: 12px;
    z-index: 12;
    text-align: center;
}

.popupAnimate {
    animation: popupAnimate 0.5s ease-in-out forwards;
}

@-webkit-keyframes popupAnimate {
    0% {
    }

    60% {
        top: 40vh;
        opacity: 0.5;
    }

    80% {
        top: 42vh;
        opacity: 1;
    }

    100% {
        top: 40vh;
        opacity: 1;
    }
}

@keyframes popupAnimate {
    0% {
    }

    60% {
        top: 40vh;
        opacity: 0.5;
    }

    80% {
        top: 42vh;
        opacity: 1;
    }

    100% {
        top: 40vh;
        opacity: 1;
    }
}

.popupAnimateOut {
    animation: popupAnimateOut 0.2s ease-in-out forwards;
}

@-webkit-keyframes popupAnimateOut {
    0% {
        top: 40vh;
    }

    100% {
        top: 100vh;
    }
}

@keyframes popupAnimateOut {
    0% {
        top: 40vh;
    }

    100% {
        top: 100vh;
    }
}

.VIPpower {
    text-align: center;
    color: #666666;
    line-height: 2;
}

.VIPpower image {
    width: 54.17vw;
    height: 44.44vw;
}

.payBtn {
    color: #fff;
    margin-top: 15vw;
}